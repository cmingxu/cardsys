%span{:style=> "height: 25px; font-size:20px; line-height: 25px;"}= "#{@date.to_chinese_ymd} 的场地预定"
%span.pull-right
  =link_to raw("<i class='icon-arrow-left'> </i>  ") ,  orders_path(:date => @predate) , :class => "btn btn-mini", :title => "前一天"
  =link_to raw("<i class='icon-refresh'> </i>  ") , orders_path(:date => Date.today),  :class => "btn btn-mini", :title => "今天"
  =link_to raw("<i class='icon-arrow-right'> </i>  ") , orders_path(:date => @nextdate),  :class => "btn btn-mini", :title => "后一天"
  =link_to raw("<i class='icon-print'> </i>  ") , "javascript: window.print();",  :class => "btn btn-mini", :title => "打印"


%div{:style => "height:3px;"}
.content
  %ul.nav.nav-tabs#tab{:style => 'margin-bottom: 12px;'}
    - current_client.court_type.each_with_index do |court_type, index|
      %li{:class => index == 0 ? "active" : ""}
        %a{:href => "##{court_type}_#{index}", "data-toggle" => "tab"}
          = court_type

  .clear

  .tab-content
    - current_client.court_type.each_with_index do |court_type, index|
      %div{:id => "#{court_type}_#{index}", :class => index == 0 ? "active tab-pane" : "tab-pane"}
        %table.index_order_table.table
          - @courts.select{|c| c.court_type == court_type }.each_slice(6) do |slice|  
            %tr.court_name
              %td.tit.first_td 时段/场地
              - slice.each_with_index do |court, index|
                %td
                  = court.name

              - (lower_bound(@period_prices)..higher_bound(@period_prices)).each do |hour_start|
                %tr.period
                  %td.first_td
                    = "#{hour_start}:00-#{hour_start.next}:00"
                  - slice.each do |court|
                    = court_status_in_period_with_period_prices(@date, hour_start, court, @period_prices)
            %div{:style => "clear:both;"}
  .h10
  .color
    %span.color01 红色-已预定
    %span.color02 浅灰色-已过期
    %span.color03 紫色-开打中
    %span.color05 褐色-已结算
    %span.color04 绿色-代卖中
  .h10

:javascript
  $(document).ready(function(){
    $("#tab").tab();
  })
