-# encoding: utf-8
!!! 5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title= content_for?(:title) ? yield(:title) : current_client.site_name
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    / Le styles
    :css
      body {
        padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
      }
    = stylesheet_link_tag "application", :media => "all"
    / Le fav and touch icons

    = javascript_include_tag "application"

  %body
    .navbar.navbar-fixed-top.non-printable
      .navbar-inner
        .container
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand{:href => "/"}
            = current_client.site_name
          .container.nav-collapse
            %ul.nav
              =# render :partial => "layouts/header_menu"
            %ul.nav.pull-right
              %li=# link_to current_user.user_name, account_path
              %li=# link_to "修改密码", change_password_users_path
              %li=# link_to '退出Admin', signout_path, :method => :delete

    .container
      .content{ :id => "content" }
        .row
          .span2.non-printable
            %ul.nav-tabs.nav-stacked.nav
              =render :partial => "layouts/admin_menu"
          .span10
            - if flash[:notice]
              .alert.alert-info
                %a{:class => "close", "data-dismiss" => "alert"} x
                %strong= flash[:notice]
            = yield
    
      %hr
      %footer
        %p &copy; Broadwell Club Mangement System  博德维球馆管理系统 #{link_to "www.broadwell.cn","http://www.broadwell.cn"}
